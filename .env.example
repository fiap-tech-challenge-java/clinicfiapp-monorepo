# Example environment variables for clinicfiapp-monorepo

# Postgres
SCHEDULER_DB_URL=jdbc:postgresql://postgres:5432/scheduler_db
SCHEDULER_DB_USER=clinicfiapp
SCHEDULER_DB_PASSWORD=supersecret
NOTIFICATION_DB_URL=jdbc:postgresql://postgres:5432/notification_db
NOTIFICATION_DB_USER=clinicfiapp
NOTIFICATION_DB_PASSWORD=supersecret
HISTORY_DB_URL=jdbc:postgresql://postgres:5432/history_db
HISTORY_DB_USER=clinicfiapp
HISTORY_DB_PASSWORD=supersecret
POSTGRES_PASSWORD=supersecret
POSTGRES_USER=clinicfiapp

# Kafka
KAFKA_BOOTSTRAP_SERVERS=kafka:9093
NOTIFICATION_CONSUMER_GROUP=notification-consumers
HISTORY_CONSUMER_GROUP=history-consumers

# Scheduler Service
SCHEDULER_PORT=8081
JPA_SHOW_SQL=false
HIBERNATE_LOG_LEVEL=WARN
OUTBOX_POLL_DELAY=5000
OUTBOX_BATCH_SIZE=50
REMINDER_CRON=0 0 8 * * *
GRAPHIQL_ENABLED=true
GRAPHQL_PATH=/graphql

# Notification Service
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=change-me
MAIL_SSL_TRUST=smtp.gmail.com
NOTIFICATION_PORT_MAPPING=8082:8082

# History Service
HISTORY_PORT=8083
HISTORY_PORT_MAPPING=8083:8083

# Kafka UI
KAFKA_UI_PORT=8080:8080
KAFKA_ADVERTISED_HOST=localhost

# Redis
REDIS_PORT_MAPPING=6379:6379

# Security (add as needed)
# JWT_SECRET=change-me
# API_KEY=change-me

# Add any other sensitive variables below
