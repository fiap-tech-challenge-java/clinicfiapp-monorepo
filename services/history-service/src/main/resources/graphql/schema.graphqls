# Adicionamos novos filtros opcionais
type Query {
    history(
        patientId: ID,
        patientName: String,
        doctorId: ID,
        date: String, # Formato YYYY-MM-DD
        status: String
    ): [ProjectedAppointmentHistory]
}

type ProjectedAppointmentHistory {
    id: ID
    patientId: String
    doctorId: String
    doctorName: String
    patientName: String
    startAt: String
    status: String
    lastAction: String
    historyUpdatedAt: String
}